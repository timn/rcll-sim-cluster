# Headless service for robot Pod
apiVersion: v1
kind: Service
metadata:
  name: rcll-sim-rosplan-{{ team.color|lower }}
  namespace: {{ namespace }}
spec:
  selector:
    app: rosplan
    robot: central
    team-color: {{ team.color|lower }}
  clusterIP: None
  ports:
  - port: 1
---
apiVersion: v1
kind: Pod
metadata:
  name: rcll-sim-rosplan-{{ team.color|lower }}
  namespace: {{ namespace }}
  labels:
    app: rosplan
    robot: central
    team-color: {{ team.color|lower }}
  annotations:
    scheduler.alpha.kubernetes.io/tolerations: '[{"key":"exclusive", "operator":"Equal", "value":"rcll-sim"}]'
spec:
  containers:
  - name: rosplan
    image: {{ rcll_sim_rosplan_image }}
    command: ["/opt/ros/run-env"]
    args: ["roslaunch", "--wait", "--screen", "--skip-log-check", "--disable-title",
           {{ roslaunch_package|default("rcll_ros") }},
           {{ roslaunch_file|default("rosplan_production.launch") }}]
    env:
    - name: ROS_MASTER_URI
      value: {{ ros_master_uri }}
    - name: NUM_ROBOTS
      value: !!str {{ robots|length }}
    - name: TEAM_NAME
      value: {{ team.name }}
    - name: TEAM_COLOR
      value: {{ team.color }}
    - name: AUTOSTART_PLANNING
      value: !!str {{ autostart_planning }}

    resources:
      requests:
        memory: "8Gi"
        cpu: "2"
      limits:
        memory: "8Gi"
        cpu: "2"

  imagePullSecrets:
    - name: regsecret
  restartPolicy: Never
