{# Run gzweb only once -#}
{% if gzweb_enable and (namespace == gzweb_namespace or namespace == "default") -%}
apiVersion: v1
kind: Service
metadata:
  name: gzweb-server
  namespace: {{ namespace }}
spec:
  selector:
    app: gzweb
  clusterIP: None
  ports:
  - port: 1
---
apiVersion: v1
kind: Service
metadata:
  name: gzweb
  namespace: {{ namespace }}
spec:
  type: NodePort
  ports:
  - port: 8080
    targetPort: 8080
    protocol: TCP
    name: http
  selector:
    app: gzweb
---
apiVersion: v1
kind: Service
metadata:
  name: gzweb-ws
  namespace: {{ namespace }}
spec:
  type: NodePort
  ports:
  - port: 7681
    targetPort: 7681
    protocol: TCP
    name: http
  selector:
    app: gzweb
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: gzweb-ingress
  namespace: {{ namespace }}
  annotations:
    kubernetes.io/ingress.class: "nginx"
    ingress.kubernetes.io/ssl-redirect: "false"
spec:
  rules:
  - http:
      paths:
      - path: /
        backend:
          serviceName: gzweb
          servicePort: 8080
      - path: /ws
        backend:
          serviceName: gzweb-ws
          servicePort: 7681
---
apiVersion: v1
kind: Pod
metadata:
  name: gzweb
  namespace: {{ namespace }}
  labels:
    app: gzweb
  annotations:
    scheduler.alpha.kubernetes.io/tolerations: '[{"key":"exclusive", "operator":"Equal", "value":"rcll-sim"}]'
    pod.beta.kubernetes.io/init-containers: '[
        {
          "name": "wait-for-gazebo",
          "image": "{{ gzweb_image }}",
          "imagePullPolicy": "Always",
          "command": ["/opt/gzweb/wait-services"],
          "args": ["gazebo"],
          "env": [
            {
              "name": "MAX_TRIES",
              "value": "60"
            }
          ]
        }
      ]'
spec:
  hostname: gzweb-server
  containers:
    - name: gzweb
      image: {{ gzweb_image }}
      imagePullPolicy: Always
      env:
      - name: GAZEBO_MASTER_URI
        value: http://gazebo:11345
      - name: GZWEB_WS_URL_PORT_SUBST
        value: /ws
      command: ["/opt/gzweb/run-gzweb"]
      ports:
        - containerPort: 8080
        - containerPort: 7681
      resources:
        requests:
          memory: "400Mi"
          cpu: "2"
        limits:
          memory: "400Mi"
          cpu: "2"

  imagePullSecrets:
    - name: regsecret
  restartPolicy: Never
{% endif -%}
