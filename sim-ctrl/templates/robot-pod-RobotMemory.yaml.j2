  - key: exclusive
    value: rcll-sim
  containers:
  - name: mongodb-sync
    image: mongo
    command:
      - mongod
      - "--replSet"
      - syncedrobmem
      - "--smallfiles"
      - "--noprealloc"
      - "--port"
      - "27021"
    ports:
      - containerPort: 27021
    volumeMounts:
      - name: mongo-storage
        mountPath: /data/db
  - name: mongodb-sidecar
    image: cvallance/mongo-k8s-sidecar
    env:
