kind: Role
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: rcll-sim-role
  namespace: {{ namespace }}
rules:
  - apiGroups: [""]
    resources: ["pods", "services", "endpoints"]
    verbs: ["list", "get"]
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: rcll-sim-role-binding
  namespace: {{ namespace }}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: rcll-sim-role
subjects:
- kind: ServiceAccount
  namespace: {{ namespace }}
  name: default
